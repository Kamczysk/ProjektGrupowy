<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calm_background"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/calm_accent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtScore2048"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik: 0"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/txtHint2048"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przesuwaj palcem"
        android:textSize="12sp"
        android:textColor="@color/text_hint"
        android:layout_marginBottom="12dp" />

    <GridLayout
        android:id="@+id/grid2048"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnRestart2048"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nowa gra"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/calm_surface"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnBack2048"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wróć"
        android:backgroundTint="#00000000"
        android:textColor="@color/text_hint" />

</LinearLayout>