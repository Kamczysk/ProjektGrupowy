<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/calm_background"
    tools:context=".MainActivity">

    <com.example.heartrateapp.WaveBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPG"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/calm_accent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMeasure"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/calm_surface"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="❤ POMIAR"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dotknij, aby zacząć relaks"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Profil (wkrótce)"
            android:backgroundTint="@color/calm_surface"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnRelax"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Relaks (ćwiczenia / gra)"
            android:backgroundTint="@color/calm_surface"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ustawienia (wkrótce)"
            android:backgroundTint="@color/calm_surface"
            android:textColor="@color/text_primary"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMusicToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_music_on"
        app:tint="@color/calm_background"
        app:backgroundTint="@color/calm_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Muzyka" />

</androidx.constraintlayout.widget.ConstraintLayout>