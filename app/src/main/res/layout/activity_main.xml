<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/violet_background"
    android:padding="24dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPG"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_light"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMeasure"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/violet_surface"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤ POMIAR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dotknij, aby zacząć relaks"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Opcja 2"
        android:backgroundTint="@color/violet_surface"
        android:textColor="@color/text_light"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnRelax"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Relaks (ćwiczenia / gra)"
        android:backgroundTint="@color/violet_surface"
        android:textColor="@color/text_light"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Opcja 1"
        android:backgroundTint="@color/violet_surface"
        android:textColor="@color/text_light"/>

</LinearLayout>