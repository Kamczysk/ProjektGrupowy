<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/calm_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poziom Tętna"
        android:textSize="28sp"
        android:textColor="@color/text_hint"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nie wiem"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/calm_accent"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zmierz ponownie"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/calm_surface"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnRelax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relaks (ćwiczenia / gra)"
        android:textColor="@color/calm_background"
        android:backgroundTint="@color/calm_accent"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wróć do Menu"
        android:backgroundTint="#00000000"
        android:textColor="@color/text_hint"/>
</LinearLayout>